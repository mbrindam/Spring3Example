<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" 
	xmlns:aop="http://www.springframework.org/schema/aop"
	xsi:schemaLocation="http://www.springframework.org/schema/beans
	http://www.springframework.org/schema/beans/spring-beans-3.0.xsd 
	http://www.springframework.org/schema/aop 
	http://www.springframework.org/schema/aop/spring-aop-3.0.xsd ">
 
 
	<aop:aspectj-autoproxy />

	<bean id="helloBean" class="com.heuristictech.core.HelloWorld">
		<property name="name" value="Michael" />
	</bean>
 
 	<!-- Aspect -->
	<bean id="logAspect" class="com.heuristictech.aspect.LoggingAspect" />
	<bean id="systemArchitectureAspect" class="com.heuristictech.aspect.SystemArchitectureAspect" />
	
</beans>